<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group"
    tools:context=".Sign_In">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/shap"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shap" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="99dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mas"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Daily Recipe"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_35sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SiginIn_et_Email"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_250sdp"
        android:background="@drawable/material"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="@dimen/_10sdp"
        android:ems="10"
        android:hint="@string/email"
        android:drawableTint="#151515"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_20sdp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_baseline_email_24" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SiginIn_et_Password"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/material"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="@dimen/_10sdp"
        android:ems="10"
        android:drawableTint="#151515"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_20sdp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SiginIn_et_Email"
        app:layout_constraintVertical_bias="0.086" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/SiginIn_Remember_chbox"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:checked="false"
        android:text="@string/remember_me"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12ssp"
         android:fontFamily="@font/cheerfulyellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SiginIn_et_Password" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SiginIn_btn_Signin"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/btnsignin"
        android:text="@string/sigin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:fontFamily="@font/cheerfulyellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SiginIn_Remember_chbox"
        app:layout_constraintVertical_bias="0.181" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SiginIn_btn_Register"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:background="@drawable/loginpizza"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:fontFamily="@font/cheerfulyellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SiginIn_btn_Signin"
        app:layout_constraintVertical_bias="0.271" />

</androidx.constraintlayout.widget.ConstraintLayout>









